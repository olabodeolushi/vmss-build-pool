{
  "variables": {
    "client_id": "{{env `ARM_CLIENT_ID`}}",
    "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "tenant_id": "{{env `ARM_TENANT_ID`}}"
  },
  "builders": [
    {
      "type": "azure-arm",
      "subscription_id": "{{user `subscription_id`}}",
      "tenant_id": "{{user `tenant_id`}}",
      "client_id": "{{user `client_id`}}",
      "client_secret": "{{user `client_secret`}}",

      "managed_image_name": "build-agent-image",
      "managed_image_resource_group_name": "vmss-build-pool",

      "os_type": "Linux",
      "image_publisher": "Canonical",
      "image_offer": "UbuntuServer",
      "image_sku": "18.04-LTS",
      "location": "West Europe",
      "vm_size": "Standard_D2s_v3"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "/linux/scripts/installers/Install-PowerShellModules.ps1",
        "/linux/scripts/installers/Install-AzureModules.ps1",
          "/linux/scripts/installers/azcopy.sh",
          "/linux/scripts/installers/azure-cli.sh",
          "/linux/scripts/installers/azure-devops-cli.sh",
          "/linux/scripts/installers/basic.sh",
          "/linux/scripts/installers/bicep.sh",
          "/linux/scripts/installers/aliyun-cli.sh",
          "/linux/scripts/installers/apache.sh",
          "/linux/scripts/installers/clang.sh",
          "/linux/scripts/installers/swift.sh",
          "/linux/scripts/installers/cmake.sh",
          "/linux/scripts/installers/codeql-bundle.sh",
          "/linux/scripts/installers/containers.sh",
          "/linux/scripts/installers/dotnetcore-sdk.sh",
          "/linux/scripts/installers/erlang.sh",
          "/linux/scripts/installers/firefox.sh",
          "/linux/scripts/installers/gcc.sh",
          "/linux/scripts/installers/gfortran.sh",
          "/linux/scripts/installers/git.sh",
          "/linux/scripts/installers/github-cli.sh",
          "/linux/scripts/installers/google-chrome.sh",
          "/linux/scripts/installers/google-cloud-sdk.sh",
          "/linux/scripts/installers/haskell.sh",
          "/linux/scripts/installers/heroku.sh",
          "/linux/scripts/installers/hhvm.sh",
          "/linux/scripts/installers/java-tools.sh",
          "/linux/scripts/installers/kubernetes-tools.sh",
          "/linux/scripts/installers/oc.sh",
          "/linux/scripts/installers/leiningen.sh",
          "/linux/scripts/installers/miniconda.sh",
          "/linux/scripts/installers/mono.sh",
          "/linux/scripts/installers/kotlin.sh",
          "/linux/scripts/installers/mysql.sh",
          "/linux/scripts/installers/mssql-cmd-tools.sh",
          "/linux/scripts/installers/sqlpackage.sh",
          "/linux/scripts/installers/nginx.sh",
          "/linux/scripts/installers/nvm.sh",
          "/linux/scripts/installers/nodejs.sh",
          "/linux/scripts/installers/bazel.sh",
          "/linux/scripts/installers/oras-cli.sh",
          "/linux/scripts/installers/phantomjs.sh",
          "/linux/scripts/installers/php.sh",
          "/linux/scripts/installers/postgresql.sh",
          "/linux/scripts/installers/pulumi.sh",
          "/linux/scripts/installers/ruby.sh",
          "/linux/scripts/installers/r.sh",
          "/linux/scripts/installers/rust.sh",
          "/linux/scripts/installers/julia.sh",
          "/linux/scripts/installers/sbt.sh",
          "/linux/scripts/installers/selenium.sh",
          "/linux/scripts/installers/terraform.sh",
          "/linux/scripts/installers/packer.sh",
          "/linux/scripts/installers/vcpkg.sh",
          "/linux/scripts/installers/dpkg-config.sh",
          "/linux/scripts/installers/mongodb.sh",
          "/linux/scripts/installers/android.sh",
          "/linux/scripts/installers/yq.sh",
          "/linux/scripts/installers/pypy.sh",
          "/linux/scripts/installers/python.sh",
          "/linux/scripts/installers/aws.sh"

    ],
    "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "scripts":[
        "/linux/scripts/installers/Install-PowerShellModules.ps1",
        "/linux/scripts/installers/Install-AzureModules.ps1"
      ]
    },
    {
      "type": "file",
      "source": "start-agent.sh",
      "destination": "/tmp/start-agent.sh"
    },
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E /bin/bash -x '{{ .Path }}'",
      "script": "install-build-agent.sh",
      "type": "shell"
    },
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x",
      "type": "shell"
    }
  ]
}
